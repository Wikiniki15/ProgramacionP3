<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProgramacionP3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProgramacionP3.Vista"
    Shell.FlyoutBehavior="Disabled"
    Title="JOProgramacionP3">

    <TabBar>
        <Tab Title="Buscar País">
            <ShellContent 
                ContentTemplate="{DataTemplate local:BuscarPaisVista}" />
        </Tab>
        
        <Tab Title="Países Consultados">
            <ShellContent 
                ContentTemplate="{DataTemplate local:PaisesConsultados}" />
        </Tab>
    </TabBar>

</Shell>
